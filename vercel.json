{
  "functions": {
    "api/**": {
      "maxDuration": 30
    }
  },
  "builds": [
    { "use": "@vercel/python", "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }}
],
  "rewrites": [
    {
      "source": "/api/negotiate/user-agent",
      "destination": "/api/negotiate/index.py"
    },
    {
      "source": "/api/negotiate/opposition-agent",
      "destination": "/api/negotiate/index.py"
    },
    {
      "source": "/api/negotiate/user-decision",
      "destination": "/api/negotiate/index.py"
    },
    {
      "source": "/api/negotiate/lawyer-decision",
      "destination": "/api/negotiate/index.py"
    }
  ]
}
